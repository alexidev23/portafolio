---
import IconArrowLeft from "../Iconos/IconArrowLeft.astro";
import IconBriefcase from "../Iconos/IconBriefcase.astro";


---

<div class="py-1.5 h-full relative">
  <div class="flex items-center gap-1.5">
    <IconBriefcase />
    <h2 class="text-[#5EA1F6] text-4xl font-bold">Experiencia</h2>
  </div>
  <div class="py-5">
    <div class='flex'>
      <div class='w-10 relative'>
        <span class='w-3 h-3 bg-cyan-700 rounded-full absolute left-[15px] top-[12px] z-10' />
        <span class='h-28 w-[2px] absolute bg-[#47494d] left-[50%]' />
      </div>
      <div class='flex sm:gap-20 xs:flex-col sm:flex-row'>
        <div class='text-white pl-2'>
          <h3 class='text-xl font-semibold text-cyan-600'>Desarrollador Junior</h3>
          <h4 class='text-md font-extralight'>ARGEC - It Consulting</h4>
          <h5 class='text-xs xs:text-sm text-gray-400'>07/2023 - 12/2023</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="flex justify-end py-2.5 absolute bottom-0 right-0">
    <button class="underline flex justify-center items-center gap-1.5">
      mas info
      <IconArrowLeft />
    </button>
  </div>
</div>